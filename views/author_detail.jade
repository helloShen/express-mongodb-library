extends layout

block content

  h1 Author: #{author.name}
  p #{author.lifespan}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in authors_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}
        hr
        p
          a(href=author.url+'/delete') Delete author
      
      else
        p This author has no books.
        